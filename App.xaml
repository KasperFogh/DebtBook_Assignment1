<Application x:Class="DebtBook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DebtBook"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="PersonsAndNumbers">
            <WrapPanel>
                <TextBlock Text="{Binding Path=Name}" 
                           Padding="5" 
                           MinWidth="50">
                </TextBlock>

                <TextBlock Text="{Binding Path=Number}"
                           Padding="5"
                           MinWidth="30">
                </TextBlock>
            </WrapPanel>
        </DataTemplate>
        <DataTemplate x:Key="DateAndNumber">
            <WrapPanel>
                <TextBlock Text="{Binding Path=Timestamp}"
                           Padding="5"
                           MinWidth="30">
                </TextBlock>
                <TextBlock Text="{Binding Path=Number}"
                           Padding="5"
                           MinWidth="30">
                </TextBlock>
            </WrapPanel>
        </DataTemplate>


    </Application.Resources>
</Application>
