<Window x:Class="DebtBook.Extra_Windows.AddPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtBook.Extra_Windows"
        mc:Ignorable="d"
        Title="Add person to debt book" Height="220" Width="250">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Add depter"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="20"
               FontWeight="Bold"
               ></Label>
        <TextBox Name="tbx_personName"
                 Text="Enter name here"
                 Grid.Row="1"
                 Margin="5"
                 ></TextBox>
        <TextBox Name="tbx_personValue"
                 Text="Enter a value"
                 Grid.Row="2"
                 Margin="5"
                 ></TextBox>
        <Button Name="btn_cancel"
                Content="Cancel"
                Grid.Row="3"
                Height="30"
                Width="80"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="5"
                ></Button>

        <Button Name="btn_save"
                Content="Save"
                Grid.Row="3"
                Height="30"
                Width="80"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="5"
                ></Button>

    </Grid>
</Window>
